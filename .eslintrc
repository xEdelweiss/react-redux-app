{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  // 0 - disabled, 1 - warning, 2 - error
  "rules": {
    "comma-dangle": 0,
    "eol-last": [0],
    "no-console": 1,
    "jsx-quotes": [1, "prefer-single"],
    "quotes": [2, "single"],
    "react/jsx-uses-vars": 1,
    "react/jsx-uses-react": 1,
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
}